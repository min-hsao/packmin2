<% if packing_list.status == 'generating' %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
    <div class="animate-spin inline-block w-8 h-8 border-4 border-blue-500 border-t-transparent rounded-full mb-4"></div>
    <h3 class="text-lg font-semibold text-blue-900">Generating your packing list...</h3>
    <p class="text-blue-700 mt-2">This usually takes 30-60 seconds.</p>
    
    <!-- Auto-refresh -->
    <meta http-equiv="refresh" content="5">
  </div>
  
<% elsif packing_list.status == 'error' %>
  <div class="bg-red-50 border border-red-200 rounded-lg p-8 text-center">
    <div class="text-4xl mb-4">ğŸ˜•</div>
    <h3 class="text-lg font-semibold text-red-900">Generation Failed</h3>
    <p class="text-red-700 mt-2"><%= packing_list.raw_response %></p>
    
    <%= link_to regenerate_packing_list_path(packing_list), 
        method: :post,
        class: "mt-4 inline-block px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" do %>
      Try Again
    <% end %>
  </div>
  
<% elsif packing_list.status == 'complete' %>
  <!-- Weather Summary -->
  <% if packing_list.weather_data.present? %>
    <div class="bg-gradient-to-r from-blue-50 to-sky-50 rounded-lg p-4 mb-6 border border-blue-100">
      <h3 class="font-semibold text-gray-900 mb-2">ğŸŒ¤ï¸ Weather Forecast</h3>
      <div class="grid grid-cols-1 sm:grid-cols-<%= packing_list.weather_data.keys.count %> gap-4">
        <% packing_list.weather_data.each do |location, weather| %>
          <div class="text-center">
            <div class="font-medium text-gray-900"><%= location %></div>
            <div class="text-2xl my-1">
              <%= weather['high_f'] || weather[:high_f] %>Â°F / <%= weather['low_f'] || weather[:low_f] %>Â°F
            </div>
            <div class="text-sm text-gray-600"><%= weather['conditions'] || weather[:conditions] %></div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Packing List Content -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-xl font-bold text-gray-900 mb-4">ğŸ“‹ Your Packing List</h2>
    
    <div class="prose prose-sm max-w-none">
      <% raw_content = packing_list.raw_response || packing_list.generated_list&.dig('raw') %>
      <% if raw_content.present? %>
        <!-- Render markdown-like content with basic formatting -->
        <div class="whitespace-pre-wrap font-mono text-sm bg-gray-50 p-4 rounded-lg overflow-x-auto">
<%= raw_content %>
        </div>
      <% else %>
        <p class="text-gray-500">No content generated yet.</p>
      <% end %>
    </div>
  </div>
  
<% else %>
  <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
    <div class="text-4xl mb-4">ğŸ“</div>
    <h3 class="text-lg font-semibold text-gray-900">Draft</h3>
    <p class="text-gray-600 mt-2">This packing list hasn't been generated yet.</p>
  </div>
<% end %>
