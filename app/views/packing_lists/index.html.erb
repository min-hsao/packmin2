<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Packing Lists</h1>
    <%= link_to new_packing_list_path, 
        class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700" do %>
      + New List
    <% end %>
  </div>
  
  <% if @packing_lists.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 divide-y divide-gray-200">
      <% @packing_lists.each do |list| %>
        <%= link_to list, class: "block p-4 hover:bg-gray-50 transition-colors" do %>
          <div class="flex items-center justify-between">
            <div>
              <div class="font-semibold text-gray-900"><%= list.title %></div>
              <div class="text-sm text-gray-500">
                <%= list.total_days %> days â€¢ Created <%= list.created_at.strftime('%b %d, %Y') %>
              </div>
            </div>
            <span class="px-3 py-1 text-sm rounded-full
              <%= list.status == 'complete' ? 'bg-green-100 text-green-700' : 
                  list.status == 'generating' ? 'bg-yellow-100 text-yellow-700' : 
                  list.status == 'error' ? 'bg-red-100 text-red-700' :
                  'bg-gray-100 text-gray-700' %>">
              <%= list.status.titleize %>
            </span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <div class="text-5xl mb-4">ğŸ’</div>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">No packing lists yet</h2>
      <p class="text-gray-600 mb-6">Create your first AI-powered packing list!</p>
      <%= link_to "Create Packing List", new_packing_list_path, 
          class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
