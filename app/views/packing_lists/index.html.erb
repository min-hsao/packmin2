<div class="py-10">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold text-gray-900">My Packing Lists</h1>
      <%= link_to new_packing_list_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        New List
      <% end %>
    </div>

    <% if @packing_lists.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <ul role="list" class="divide-y divide-gray-200">
          <% @packing_lists.each do |list| %>
            <li class="hover:bg-gray-50">
              <div class="px-4 py-4 sm:px-6 flex items-center justify-between">
                <%= link_to list, class: "flex-1 min-w-0" do %>
                  <div class="flex items-center">
                    <span class="text-2xl mr-3">ğŸ“‹</span>
                    <div>
                      <p class="text-sm font-medium text-blue-600 truncate"><%= list.title %></p>
                      <p class="text-sm text-gray-500">
                        <%= list.total_items_count %> items â€¢ Created <%= time_ago_in_words(list.created_at) %> ago
                      </p>
                    </div>
                  </div>
                <% end %>
                <%= button_to list, method: :delete, class: "text-red-500 hover:text-red-700 p-2", data: { confirm: "Delete this packing list?" } do %>
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                  </svg>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="bg-white rounded-lg border border-gray-200 p-12 text-center">
        <span class="text-5xl">ğŸ“‹</span>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No packing lists yet</h3>
        <p class="mt-2 text-gray-500">Get started by creating your first AI-powered packing list.</p>
        <div class="mt-6">
          <%= link_to new_packing_list_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
            Create your first list
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
